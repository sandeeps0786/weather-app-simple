<body>
   <div class="box0"> <h1>
         know your current weather temperature and humidity!!
         
    </h1>
   
    <div class=box>
           <form>
           <label>enter your location</label>
           <br>
           <input type="text" placeholder="location"  >
           <button>search</button>
           </form>
    </div>
    <div class="box2">
      <p id="mes1"></p>
      <div>
      
    
     <div class="photo"> <img src="data:image/png;base64," width="200" height="100"></div>
      </div> 
   <script>
       const weatherform=document.querySelector('form')
       const search=document.querySelector('input')
       const mes=document.querySelector('#mes1')
    
                
               

       weatherform.addEventListener('submit',(e)=>{
            e.preventDefault()
             const location=search.value
              mes.textContent='wait......'

             fetch('http://localhost:4000/weather?address='+location).then((response)=>{
                  response.json().then((data)=>{
                      if(data.error)
                        {
                            mes.textContent=data.error
                        }
                        else{
                            
                             mes.textContent=data.location+' have '+data.temperature+' degree celsius and humidity is '+
                             data.humidity+ ' gm/cubic m. Dont worry you are not going to die at this temprature :-)'
                        }
                  })
             })
           
       })

   </script>
</body>